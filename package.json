{
  "name": "dynamic-text-editor",
  "version": "0.1.1",
  "description": "Dynamic text editor component for React applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "pnpm type-check && bunchee src/index.ts --dts --target es2020",
    "dev": "bunchee src/index.ts --watch --dts",
    "dev:test": "pnpm --filter test dev",
    "dev:all": "pnpm run -r --parallel dev",
    "build:all": "pnpm build && pnpm --filter test build",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "react",
    "text-editor",
    "dynamic",
    "editor"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/dynamic-text-editor.git"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17.0 || ^18.0",
    "react-dom": "^16.8 || ^17.0 || ^18.0"
  },
  "dependencies": {
    "quill": "^2.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "bunchee": "^5.1.5",
    "eslint": "^9.17.0",
    "prettier": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "turbo": "1.6",
    "typescript": "~5.6.2"
  },
  "packageManager": "pnpm@8.8.0",
  "sideEffects": false
}
